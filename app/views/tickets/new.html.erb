<body class="image">
  <div class="centering">
    <div id="back">
  <h1>Book a flight</h1>


<% if @flight != [] %>
  Seats available. Book a flight

  <%= form_for [@flight, @ticket] do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :seat %>
    <%= f.text_field :seat_type %>
    <%= f.submit 'Book' %>
  <% end %>
  <br>
  <%= link_to 'Admin', '/admins' %>
<% else %>
  No seats available.
<% end %>
</div>
</div>
</body>